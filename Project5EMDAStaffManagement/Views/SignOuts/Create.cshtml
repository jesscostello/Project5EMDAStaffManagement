@model Project5EMDAStaffManagement.Models.SignOuts

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SignOuts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Staff">Staff Member </label>
                <select id="StaffSelect" asp-for="Staff" asp-items="@((List<SelectListItem>) ViewData["Staff"])" class="form-control" style="width: 100%">
                    <option value="">Select Staff</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Reason" asp-items="@((List<SelectListItem>) ViewData["Reasons"])" class="form-control" style="width: 100%">
                    <option value="">Select Reason</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
