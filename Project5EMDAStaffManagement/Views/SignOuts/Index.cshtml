@*@model IEnumerable<Project5EMDAStaffManagement.Models.SignOuts>*@
@using System.Collections
@model List<SignOuts>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h2>Staff Currently Out</h2><br />
    <h3 class="col-xs-12">Today: </h3>

    @foreach (var item in ViewData["StaffOut"] as List<SignOuts>)
    {
        @if (item.Day.Date == DateTime.Today.Date)
        {
            <p class="col-md-4">
                <b>@item.Staff.FirstName @item.Staff.LastName </b>
                signed out at
                @item.TimeOut.ToShortTimeString()
                <br />Reason:
                @item.Reason.Reason
                <br />Hours in office:
                @if (item.HoursIn.Length > 3)
                {
                    @item.HoursIn.Substring(0, 5)
                }
                else
                {
                    @item.HoursIn.Substring(0, 3)
                }
            </p>
        }
    }

    <h3 class="col-xs-12">Past: </h3>

    @foreach (var item in ViewData["StaffOut"] as List<SignOuts>)
    {
        @if (item.Day.Date != DateTime.Today.Date)
        {
            <p class="col-md-4">
                <b>@item.Staff.FirstName @item.Staff.LastName </b>
                signed out at
                @item.TimeOut.ToShortTimeString()
                <br />Reason:
                @item.Reason.Reason
                <br />Hours in office:
                @if (item.HoursIn.Length > 3)
                {
                    @item.HoursIn.Substring(0, 5)
                }
                else
                {
                    @item.HoursIn.Substring(0, 3)
                }
            </p>
        }
    }

</div>