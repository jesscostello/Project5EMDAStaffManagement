@model Project5EMDAStaffManagement.Models.Staff

@{
    ViewData["Title"] = "Sign In / Out";
}

<div class="container">
    <h2>
        Sign In / Out
    </h2>
    <br />
    <div class="row">
        <form name="staffform" method="get">
            <div class="col-md-4 col-xs-6">
                <label asp-for="FirstName">Staff Member </label>
                <select id="StaffSelect" asp-for="Id" asp-items="@((List<SelectListItem>) ViewData["Staff"])" class="form-control" style="width: 100%">
                    <option value="">Select Staff</option>
                </select>
            </div>
            <span id="span1"></span>
            <div class="col-md-2 col-xs-2 text-center">
                Out
                <label class="switch">
                    <input id="InToggle" name="inout" type="checkbox">
                    <span class="slider round"></span>
                </label>
                In
            </div>
            <div class="col-md-2 col-xs-4">
                <input type="submit" class="btn btn-success" style="width: 100%" />
            </div>
        </form>
    </div>
    @foreach (var SelectListItem in (List<SelectListItem>)ViewData["Staff"])
    {
        <h3>@SelectListItem.Text @SelectListItem.Value</h3>
    }
    <h3>@ViewData["Test"]</h3>
</div>