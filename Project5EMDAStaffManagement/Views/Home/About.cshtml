@model Project5EMDAStaffManagement.Models.Staff

@{
    ViewData["Title"] = "About";
}

<div class="container">
    <h2>
        Sign In / Out
    </h2>
    <br />
    <div class="row">
        <div class="col-md-4">
            <select asp-items="@((List<SelectListItem>) ViewData["Staff"])" class="form-control" style="width: 100%">
                <option value="">Select Staff</option>
            </select>
        </div>
        <div class="col-md-2 text-center">
            Out
            <label class="switch">
                <input type="checkbox" >
                <span class="slider round"></span>
            </label>
            In
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-success" style="width: 100%" disabled />
        </div>
    </div>
</div>